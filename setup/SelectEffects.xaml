<Window x:Class="ReShade.Setup.SelectEffectsDialog" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Title="Select effects" Width="498" Height="300" WindowStyle="None" WindowStartupLocation="CenterOwner">
  <DockPanel LastChildFill="True">
    <Label DockPanel.Dock="Top" Margin="10" Padding="0" VerticalAlignment="Top" Foreground="#FF003399" FontSize="16" Content="Select effects to install:" />
    <DockPanel DockPanel.Dock="Bottom" Margin="10,5,10,10">
      <Button Content="Uncheck All" Width="100" HorizontalAlignment="Left" Click="ChangeChecked" />
      <Button Content="OK" Width="100" HorizontalAlignment="Right" Click="ConfirmSelection" />
    </DockPanel>
    <ListView x:Name="EffectList" Margin="10,5,10,5">
      <ListView.ItemTemplate>
        <DataTemplate>
          <StackPanel Orientation="Horizontal">
            <CheckBox VerticalAlignment="Center" Margin="0,0,5,0" IsChecked="{Binding IsChecked}" />
            <TextBlock Text="{Binding Name}" />
          </StackPanel>
        </DataTemplate>
      </ListView.ItemTemplate>
    </ListView>
  </DockPanel>
</Window>